{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": {
                "Federated": "arn:aws:iam::your-account-id:oidc-provider/oidc.eks.us-east-1.amazonaws.com/id/your-oidc-id"
            },
            "Action": "sts:AssumeRoleWithWebIdentity",
            "Condition": {
                "StringEquals": {
                    "oidc.eks.us-east-1.amazonaws.com/id/your-oidc-id:aud": "sts.amazonaws.com",
                    "oidc.eks.us-east-1.amazonaws.com/id/your-oidc-id:sub": "system:serviceaccount:kube-system:aws-load-balancer-controller"
                }
            }
        }
    ]
}